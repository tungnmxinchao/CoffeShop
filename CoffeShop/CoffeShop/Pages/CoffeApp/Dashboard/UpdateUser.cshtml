@page
@model CoffeShop.Pages.CoffeApp.Dashboard.UpdateUserModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="User update form" />
	<meta name="author" content="CoffeApp Admin" />
	<title>Update User - CoffeApp</title>
	<link href="~/admin/css/styles.css" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
	@await Html.PartialAsync("Shared/NavBarAdmin")
	<div id="layoutSidenav">
		@await Html.PartialAsync("Shared/LayoutSideNav")
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">
					<h1 class="mt-4">Update User</h1>
					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item"><a href="/CoffeApp/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item"><a href="/CoffeApp/Dashboard/ManageUser">Users Management</a></li>
						<li class="breadcrumb-item active">Update User</li>
					</ol>

					<div class="card mb-4">
						<div class="card-header">
							<i class="fas fa-user-edit me-1"></i>
							Update User Information
						</div>
						<div class="card-body">
							<form method="post">
								<input type="hidden" asp-for="UserId" />

								<div class="mb-3">
									<label for="fullName" class="form-label">Full Name</label>
									<input type="text" class="form-control" asp-for="User.FullName" readonly />
								</div>
								<div class="mb-3">
									<label for="email" class="form-label">Email</label>
									<input type="email" class="form-control" asp-for="User.Email" readonly />
								</div>
								<div class="mb-3">
									<label for="phone" class="form-label">Phone</label>
									<input type="text" class="form-control" asp-for="User.Phone" readonly />
								</div>
								<div class="mb-3">
									<label for="points" class="form-label">Points</label>
									<input type="text" class="form-control" asp-for="User.Poins" readonly />
								</div>
								<div class="mb-3">
									<label for="pointsUsed" class="form-label">Points Used</label>
									<input type="text" class="form-control" asp-for="User.PoinsUsed" readonly />
								</div>
								<div class="mb-3">
									<label for="role" class="form-label">Role</label>
									<select class="form-control" asp-for="User.Role" required>
										<option value="Customer" selected="@(Model.User.Role == "Customer")">Customer</option>
										<option value="Staff" selected="@(Model.User.Role == "Staff")">Staff</option>
									</select>
								</div>
								<div class="mb-3">
									<label for="status" class="form-label">Status</label>
									<select class="form-control" asp-for="User.Status">
										<option value="Active" selected="@(Model.User.Status == "Active")">Active</option>
										<option value="Blocked" selected="@(Model.User.Status == "Blocked")">Blocked</option>
									</select>
								</div>
								<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
								<a href="/CoffeApp/Dashboard/ManageUser" class="btn btn-secondary">Cancel</a>
							</form>
						</div>
					</div>
				</div>
			</main>
			@await Html.PartialAsync("Shared/FooterAdmin")
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/admin/js/scripts.js"></script>
</body>
</html>
