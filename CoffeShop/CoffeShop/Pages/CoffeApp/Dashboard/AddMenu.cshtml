@page
@model CoffeShop.Pages.CoffeApp.Dashboard.AddMenuModel
@{
	ViewData["Title"] = "Manage Products";
}
<h1>Manage Products</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="Add new product to the catalog" />
	<meta name="author" content="CoffeApp Admin" />
	<title>Add Product - CoffeApp</title>
	<link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
	<link href="~/admin/css/styles.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
	@await Html.PartialAsync("Shared/NavBarAdmin")
	<div id="layoutSidenav">
		@await Html.PartialAsync("Shared/LayoutSideNav")
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">
					<h1 class="mt-4">Add New Product</h1>
					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
						<li class="breadcrumb-item"><a href="/CoffeApp/Dashboard/ManageMenu">Menu Management</a></li>
						<li class="breadcrumb-item active">Add Menu</li>
					</ol>
                    <form method="post" enctype="multipart/form-data">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-plus me-1"></i>
                                Add Product
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="form-label" for="Name">Product Name</label>
                                    <input type="text" class="form-control" id="Name" name="Name" required />
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Name)</span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="Price">Price</label>
                                    <input type="number" class="form-control" id="Price" name="Price" required step="0.01" min="0" />
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Price)</span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="Description">Description</label>
                                    <textarea class="form-control" id="Description" name="Description" required rows="3"></textarea>
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Description)</span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="Image">Upload Image</label>
                                    <input type="file" class="form-control" id="Image" name="Image" required accept="image/*" />
                                    <span class="text-danger">@Html.ValidationMessageFor(model => model.Image)</span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="CategoryId">Category</label>
                                    <select class="form-select" id="CategoryId" name="CategoryId" required>
                                        <option value="">Select Category</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.Name</option>
                                        }
                                    </select>
                                </div>

                                <div class="mb-3 text-left">
                                    <h3><strong>Ingredients</strong></h3>
                                    @foreach (var ingredient in Model.ListInventory)
                                    {
                                        <div class="form-check d-flex align-items-center mb-3">
                                            <input class="form-check-input me-2" type="checkbox"
                                                   value="@ingredient.ItemId" name="SelectedIngredients"
                                                   id="@ingredient.ItemId" />
                                            <label class="form-check-label me-2" for="@ingredient.Name">
                                                @ingredient.Name
                                            </label>
                                            <div class="mb-3 ms-5">
                                                <label class="form-label" for="quantity_@ingredient.ItemId">Quantity (gam)</label>
                                                <input type="number" class="form-control"
                                                       id="quantity_@ingredient.ItemId"
                                                       name="QuantityPerProduct[@ingredient.ItemId]"
                                                       min="0" step="1" placeholder="Enter quantity in grams" />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Save Product
                        </button>
                        <a href="/Dashboard/ManageMenu" class="btn btn-secondary ms-2">Cancel</a>
                    </form>

				</div>
			</main>
			@await Html.PartialAsync("Shared/FooterAdmin")
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="~/admin/js/scripts.js"></script>
</body>
</html>